<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dam.gala.damgame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/city_button"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/city_button"
        android:supportsRtl="true"
        android:theme="@style/Theme.DamGame">
        <activity android:name="dam.gala.damgame.activities.SettingsActivity"/>
        <activity android:name="dam.gala.damgame.activities.RegisterActivity"
            android:screenOrientation="landscape"/>
        <activity android:name="dam.gala.damgame.activities.LoginActivity"
            android:screenOrientation="landscape"/>
        <activity android:name="dam.gala.damgame.activities.GameActivity"
            android:screenOrientation="landscape"/>
        <activity
            android:name="dam.gala.damgame.activities.PlayActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
</manifest>